---
import Layout from '../layouts/Layout.astro';
import { Section, Container, Block } from '../../devlink/_Builtin/Basic';
import { VcHeadercheck_mark as VcHeader } from '../../devlink/VcHeader✓.jsx';
import { VcFootercheck_mark as VcFooter } from '../../devlink/VcFooter✓.jsx';
import { VcHerocheck_mark as VcHero } from '../../devlink/VcHero✓.jsx';
import { VcSubHero } from '../../devlink/VcSubHero.jsx';
import { VcHeadingcheck_mark as VcHeading } from '../../devlink/VcHeading✓.jsx';
import { VcParagraphcheck_mark as VcParagraph } from '../../devlink/VcParagraph✓.jsx';
import { VcButtoncheck_mark as VcButton } from '../../devlink/VcButton✓.jsx';
import { VcFiftyLeftcheck_mark as VcFiftyLeft } from '../../devlink/VcFiftyLeft✓.jsx';
import { VcFiftyRightcheck_mark as VcFiftyRight } from '../../devlink/VcFiftyRight✓.jsx';
import { VcCta } from '../../devlink/VcCta.jsx';
import { VcHeroHeadingcheck_mark as VcHeroHeading } from '../../devlink/VcHeroHeading✓.jsx';
import { VcMiniHerocheck_mark as VcMiniHero } from '../../devlink/VcMiniHero✓.jsx';
import { VcMaintenanceBlock } from '../../devlink/VcMaintenanceBlock.jsx';
import { VcBottomActionable } from '../../devlink/VcBottomActionable.jsx';
import { VcFancyFiftyLeft } from '../../devlink/VcFancyFiftyLeft.jsx';
import { VcFancyFiftyRight } from '../../devlink/VcFancyFiftyRight.jsx';
import { VcFifty } from '../../devlink/VcFifty.jsx';
import { VcPreloader } from '../../devlink/VcPreloader.jsx';
import { DraftInfoBlock } from '../../devlink/DraftInfoBlock.jsx';
import { AdamBlockUncoded } from '../../devlink/AdamBlockUncoded.jsx';
import { SideBySide } from '../../devlink/SideBySide.jsx';
import { Rr } from '../../devlink/Rr.jsx';
import { Kk } from '../../devlink/Kk.jsx';
import { VcGal } from '../../devlink/VcGal.jsx';
import { CustomCode } from '../../devlink/CustomCode.jsx';
---

<Layout>
  <div class="scratchpad-container">
    
    <!-- Page Title -->
    <Section className="title-section">
      <Container>
        <h1 class="page-title">Component Scratchpad</h1>
        <p class="page-subtitle">All Vancouver Club components stacked vertically</p>
        <a href="/email-sigs" class="back-link">← Back to Home</a>
      </Container>
    </Section>

    <!-- VcHeader -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcHeader✓</h2>
          <VcHeader client:load />
        </div>
      </Container>
    </Section>

    <!-- VcHero -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcHero✓</h2>
          <VcHero
            client:load
            heroHeading="Sample Hero Component"
            heroSubheading="This demonstrates the hero section component"
          />
        </div>
      </Container>
    </Section>

    <!-- VcSubHero -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcSubHero</h2>
          <VcSubHero client:load />
        </div>
      </Container>
    </Section>

    <!-- VcHeroHeading -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcHeroHeading✓</h2>
          <VcHeroHeading
            client:load
            heroHeadingText="Sample Hero Heading"
            heroSubheadingText="This is a hero heading component"
          />
        </div>
      </Container>
    </Section>

    <!-- VcMiniHero -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcMiniHero✓</h2>
          <VcMiniHero client:load />
        </div>
      </Container>
    </Section>

    <!-- VcHeading -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcHeading✓</h2>
          <VcHeading
            client:load
            headingText="Sample Vancouver Club Heading"
            headingTag="h3"
          />
        </div>
      </Container>
    </Section>

    <!-- VcParagraph -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcParagraph✓</h2>
          <VcParagraph
            client:load
            paragraphText="This is a sample paragraph component demonstrating the Vancouver Club's text styling and layout approach."
          />
        </div>
      </Container>
    </Section>

    <!-- VcButton -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcButton✓</h2>
          <VcButton
            client:load
            buttonText="Sample Button"
            buttonLink="#"
          />
        </div>
      </Container>
    </Section>

    <!-- VcCta -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcCta</h2>
          <VcCta client:load />
        </div>
      </Container>
    </Section>

    <!-- VcFiftyLeft -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcFiftyLeft✓</h2>
          <VcFiftyLeft
            client:load
            fiftyLeftHeading="Left Content Section"
            fiftyLeftParagraph="This demonstrates the left-side content in a 50/50 layout component."
          />
        </div>
      </Container>
    </Section>

    <!-- VcFiftyRight -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcFiftyRight✓</h2>
          <VcFiftyRight
            client:load
            fiftyRightHeading="Right Content Section"
            fiftyRightParagraph="This demonstrates the right-side content in a 50/50 layout component."
          />
        </div>
      </Container>
    </Section>

    <!-- VcFancyFiftyLeft -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcFancyFiftyLeft</h2>
          <VcFancyFiftyLeft client:load />
        </div>
      </Container>
    </Section>

    <!-- VcFancyFiftyRight -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcFancyFiftyRight</h2>
          <VcFancyFiftyRight client:load />
        </div>
      </Container>
    </Section>

    <!-- VcFifty -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcFifty</h2>
          <VcFifty client:load />
        </div>
      </Container>
    </Section>

    <!-- SideBySide -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">SideBySide</h2>
          <SideBySide client:load />
        </div>
      </Container>
    </Section>

    <!-- VcMaintenanceBlock -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcMaintenanceBlock</h2>
          <VcMaintenanceBlock client:load />
        </div>
      </Container>
    </Section>

    <!-- VcBottomActionable -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcBottomActionable</h2>
          <VcBottomActionable client:load />
        </div>
      </Container>
    </Section>

    <!-- DraftInfoBlock -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">DraftInfoBlock</h2>
          <DraftInfoBlock client:load />
        </div>
      </Container>
    </Section>

    <!-- AdamBlockUncoded -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">AdamBlockUncoded</h2>
          <AdamBlockUncoded client:load />
        </div>
      </Container>
    </Section>

    <!-- Rr -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">Rr</h2>
          <Rr client:load />
        </div>
      </Container>
    </Section>

    <!-- Kk -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">Kk</h2>
          <Kk client:load />
        </div>
      </Container>
    </Section>

    <!-- VcGal -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcGal</h2>
          <VcGal client:load />
        </div>
      </Container>
    </Section>

    <!-- VcPreloader -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcPreloader</h2>
          <VcPreloader client:load />
        </div>
      </Container>
    </Section>

    <!-- CustomCode -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">CustomCode</h2>
          <CustomCode client:load />
        </div>
      </Container>
    </Section>

    <!-- VcFooter -->
    <Section className="component-section">
      <Container>
        <div class="component-wrapper">
          <h2 class="component-title">VcFooter✓</h2>
          <VcFooter client:load />
        </div>
      </Container>
    </Section>

  </div>
</Layout>

<style>
  /* Dark Theme Base */
  :global(body) {
    background: #1a1a1a;
    color: #ffffff;
  }
  
  .scratchpad-container {
    min-height: 100vh;
    background: #1a1a1a;
  }
  
  .title-section {
    background: #2d2d2d;
    padding: 3rem 0;
    text-align: center;
    border-bottom: 1px solid #444;
  }
  
  .page-title {
    font-size: 3rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 1rem;
  }
  
  .page-subtitle {
    font-size: 1.25rem;
    color: #cccccc;
    margin-bottom: 2rem;
  }
  
  .back-link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    transition: background 0.3s ease;
  }
  
  .back-link:hover {
    background: #0056b3;
  }
  
  .component-section {
    padding: 3rem 0;
    border-bottom: 1px solid #333;
  }
  
  .component-section:nth-child(even) {
    background: #222222;
  }
  
  .component-section:nth-child(odd) {
    background: #1a1a1a;
  }
  
  .component-wrapper {
    width: 100%;
  }
  
  .component-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #00d4ff;
    margin-bottom: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #007bff;
    display: inline-block;
  }
  
  /* Ensure components display properly */
  .component-wrapper > :global(*:last-child) {
    margin-bottom: 0;
  }
</style> 